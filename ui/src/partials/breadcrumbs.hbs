<nav class="crumbs" aria-label="breadcrumbs">
  {{#if page.breadcrumbs}}
  <ul>
    {{#each page.breadcrumbs}}
    <li class="crumb">
    {{~#if (and ./url (eq ./urlType 'internal'))~}}
    <a href="{{{relativize @root.page.url ./url}}}">{{{./content}}}</a>
    {{~else~}}
    {{{./content}}}
    {{~/if~}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</nav>
