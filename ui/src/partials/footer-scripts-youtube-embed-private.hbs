<!--Head Scripts YouTube Embed Private for dev and staging-->
<script type="text/javascript">
	(function($) {
		$(function() {
			var ytID;
			//find each YouTube embed and load video iframe
			$( "a.yt-widget" ).each(function( index ) {
				var anchor = $(this);
				var ytURL = $(this).attr("href");
				var queryString = anchor[0].search;
				let params = new URLSearchParams(queryString);
				ytID = params.get("v");
				$(this).before('<div class="flex-video-wrapper"><div class="flex-video"><iframe id="player" class="youtube-embed-player" src="//www.youtube.com/embed/'+ytID+'?rel=0&modestbranding=0" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe></div></div>');
				$(this).removeAttr("href").removeClass("yt-widget").addClass("yt-widget-hide");
			});
		});
	})(jQuery);
</script>
